{
  "tasks": {
    "test": "deno test --doc --import-map=./_test_import_map.json"
  },
  "compilerOptions": {
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true
  },
  "fmt": {
    "files": {
      "exclude": ["npm", "CHANGELOG.md", "CODE_OF_CONDUCT.md"]
    }
  },
  "lint": {
    "files": {
      "exclude": ["npm", "CHANGELOG.md", "CODE_OF_CONDUCT.md"]
    },
    "rules": {
      "exclude": ["ban-types"]
    }
  },
  "test": {
    "files": {
      "exclude": ["npm", "CHANGELOG.md", "CODE_OF_CONDUCT.md"]
    }
  }
}
