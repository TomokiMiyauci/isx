{
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/lib/**/*_test.ts?(x)", "!**/types_test.ts?(x)"],
  "transform": {
    "^.+\\.(t|j)sx?$": "@swc/jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/lib/$1",
    "^@test/(.*)$": "<rootDir>/tests/$1"
  },
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "<rootDir>/coverage"
}
